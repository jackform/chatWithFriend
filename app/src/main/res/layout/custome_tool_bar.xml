<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@drawable/primary_color">
    <org.jackform.customwidget.RippleView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:rv_color="@color/background_floating_material_dark"
        app:rv_type="doubleRipple"
        app:rv_zoom="false"
        app:rv_alpha="133"
        app:rv_rippleDuration="80">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_btn_back" />
    </org.jackform.customwidget.RippleView>

    <TextView
        android:id="@+id/toolbar_title"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/default_toolbar_title"/>
    <org.jackform.customwidget.RippleView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        app:rv_color="@color/background_floating_material_dark"
        app:rv_type="doubleRipple"
        app:rv_zoom="false"
        app:rv_alpha="133"
        app:rv_rippleDuration="80">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_02"
            />
    </org.jackform.customwidget.RippleView>

</android.support.v7.widget.Toolbar>
