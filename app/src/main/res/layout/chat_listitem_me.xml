<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f0f0f0" 
    android:paddingLeft="80dip"
    android:paddingRight="8dip"
    android:paddingBottom="10dip"
    android:paddingTop="10dip">
        
    <ImageView 
        android:id="@+id/chatlist_image_me"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="5dip"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/chatlist_text_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/chatlist_image_me"
        android:layout_alignTop="@id/chatlist_image_me"
        android:textSize="8pt"
        android:background="@drawable/balloon_back_right"
        android:paddingTop="13dip"
        android:paddingBottom="18dip"      />
    <org.jackform.customwidget.material.widget.ProgressView
        android:id="@+id/progress_is_sending_me"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/chatlist_text_me"
        android:layout_alignBottom="@id/chatlist_text_me"
        android:visibility="gone"/>
    <TextView android:id="@+id/chat_time_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatlist_text_me"
        android:layout_alignRight="@id/chatlist_text_me"
        android:textSize="13sp"
        android:textColor="@android:color/secondary_text_light"
        />

</RelativeLayout>
